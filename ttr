        let currentDay = '';
        let notificationsEnabled = false;
        let deferredPrompt;

        // Initialize app
        document.addEventListener('DOMContentLoaded', function() {
            updateCurrentTime();
            setInterval(updateCurrentTime, 1000);
            
            const today = new Date();
            const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            currentDay = days[today.getDay()];
            
            // Set active day
            document.querySelectorAll('.day-btn').forEach(btn => {
                if (btn.dataset.day === currentDay) {
                    btn.classList.add('active');
                }
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.day-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    currentDay = this.dataset.day;
                    displaySchedule();
                });
            });
            
            displaySchedule();
            setupNotifications();
            setupPWA();
        });

        function updateCurrentTime() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            };
            document.getElementById('currentTime').textContent = now.toLocaleDateString('en-US', options);
        }

        function displaySchedule() {
            const container = document.getElementById('scheduleContainer');
            const schedule = timetable[currentDay] || [];
            
            if (schedule.length === 0) {
                container.innerHTML = '<div style="text-align: center; padding: 40px; color: #6b7280;">No classes scheduled for this day</div>';
                return;
            }

            const now = new Date();
            const currentTime = now.getHours() * 60 + now.getMinutes();

            container.innerHTML = schedule.map(slot => {
                const [startTime, endTime] = slot.time.split('-');
                const [startHour, startMin] = startTime.split(':').map(Number);
                const [endHour, endMin] = endTime.split(':').map(Number);
                
                const startTimeMinutes = startHour * 60 + startMin;
                const endTimeMinutes = endHour * 60 + endMin;
                
                let className = 'time-slot';
                if (currentTime >= startTimeMinutes && currentTime <= endTimeMinutes) {
                    className += ' current';
                } else if (currentTime < startTimeMinutes && currentTime > startTimeMinutes - 30) {
                    className += ' upcoming';
                }

                return `
                    <div class="${className}">
                        <div class="time">${slot.time}</div>
                        <div class="subject">
                            <div class="subject-name">${slot.subject}</div>
                            <div class="subject-code">${slot.code} ${slot.instructor ? '- ' + slot.instructor : ''}</div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function setupNotifications() {
            const btn = document.getElementById('notificationBtn');
            const status = document.getElementById('status');
            
            if (!('Notification' in window)) {
                btn.textContent = 'Notifications not supported';
                btn.disabled = true;
                return;
            }
            
            if (Notification.permission === 'granted') {
                notificationsEnabled = true;
                btn.textContent = 'âœ… Notifications Enabled';
                btn.disabled = true;
                scheduleNotifications();
                status.innerHTML = '<div class="status success">Notifications are enabled! You\'ll get reminders 5 minutes before each class.</div>';
            }
            
            btn.addEventListener('click', function() {
                Notification.requestPermission().then(permission => {
                    if (permission === 'granted') {
                        notificationsEnabled = true;
                        btn.textContent = 'âœ… Notifications Enabled';
                        btn.disabled = true;
                        scheduleNotifications();
                        status.innerHTML = '<div class="status success">Great! You\'ll now receive reminders 5 minutes before each class.</div>';
                    } else {
                        status.innerHTML = '<div class="status error">Please enable notifications in your browser settings to receive class reminders.</div>';
                    }
                });
            });
        }

        function scheduleNotifications() {
            if (!notificationsEnabled) return;
            
            const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            const now = new Date();
            
            // Schedule for next 7 days
            for (let i = 0; i < 7; i++) {
                const targetDate = new Date(now);
                targetDate.setDate(now.getDate() + i);
                const dayName = days[targetDate.getDay()];
                
                const schedule = timetable[dayName] || [];
                schedule.forEach(slot => {
                    if (slot.code === 'BREAK' || slot.code === 'LUNCH') return;
                    
                    const [startTime] = slot.time.split('-');
                    const [hour, minute] = startTime.split(':').map(Number);
                    
                    const notificationTime = new Date(targetDate);
                    notificationTime.setHours(hour, minute - 5, 0, 0); // 5 minutes before
                    
                    const timeUntilNotification = notificationTime.getTime() - now.getTime();
                    
                    if (timeUntilNotification > 0) {
                        setTimeout(() => {
                            new Notification('ðŸ“š Class Reminder', {
                                body: `${slot.subject} (${slot.code}) starts in 5 minutes!`,
                                icon: 'data:image/svg+xml;base64,',
                                tag: slot.code,
                                requireInteraction: true
                            });
                        }, timeUntilNotification);
                    }
                });
            }
        }

        function setupPWA() {
            // Handle install prompt
            window.addEventListener('beforeinstallprompt', (e) => {
                e.preventDefault();
                deferredPrompt = e;
                document.getElementById('installPrompt').style.display = 'block';
            });

            document.getElementById('installBtn').addEventListener('click', () => {
                if (deferredPrompt) {
                    deferredPrompt.prompt();
                    deferredPrompt.userChoice.then((choiceResult) => {
                        if (choiceResult.outcome === 'accepted') {
                            document.getElementById('installPrompt').style.display = 'none';
                        }
                        deferredPrompt = null;
                    });
                }
            });

            // Register service worker
            if ('serviceWorker' in navigator) {
                navigator.serviceWorker.register('data:text/javascript;base64,');
            }
        }

        // Update schedule every minute
        setInterval(displaySchedule, 60000);
    </script>
</body>
